@import "/pages/takeout/pay/pay.wxss";

.orderDetail .state {
  display: flex;
  flex-flow: column;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  padding: 36rpx 0 24rpx 0;
  background: #fff;
  color: #333;
  border-bottom: 1px solid #eee;
}

.orderDetail .state .thanks {
  font-size: 28rpx;
  font-weight: normal;
  color: #666;
  padding-top: 20rpx;
}

.orderDetail .shopName {
  background: #fff;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  padding: 0 20rpx;
  border-bottom: 1px solid #f1f1f1;
  font-size: 28rpx;
  color: #666;
  justify-content: space-between;
}

.orderDetail .shopName .shopImg {
  border-radius: 3px;
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.orderDetail .shopName text {
}

.operation {
  font-size: 26rpx;
  padding: 10rpx;
  font-weight:400;
  border-radius: 5rpx;
  color: #333;
  width: 130rpx;
  margin: auto 5rpx;
  display: inline-block;
}

.pay-btn {
  color: #33ccff;
  border: 1px solid #33ccff;
}

.operation-line {
  margin-top: 15rpx;
  padding: 18rpx 0;
  text-align: center;
}

.receive-btn {
  color: #02DF82;
  border: 1px solid #02DF82;
}

.cards {
  margin: 20rpx;
  border-radius: 8rpx;  
}

.orderInfo {
  padding: 0 15rpx;
}

.order-item {
  padding: 16rpx 8rpx;
}