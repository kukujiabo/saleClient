.cart-detail .list .item .num {
    width: 50rpx;
    text-align: center;
    margin: 0 5rpx;
}

.cart {
    display: -webkit-flex;
    position: fixed;
    z-index: 9;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    background: #eee;
}

.cart .data {
    -webkit-flex: 1;
    /*border-top: 1rpx solid #e7e7e7;*/
}

.cart .data .icon {
    position: absolute;
    left: 40rpx;
    top: -20rpx;
