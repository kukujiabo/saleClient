    border-radius: 50%;
}

.cart .data .icon image {
    width: 100rpx;
    height: 100rpx;
}

.cart .data .icon .count {
    position: absolute;
    left: 70rpx;
    top: -10rpx;
    font-size: 30rpx;
    line-height: 40rpx;
    padding: 0 12rpx;
    color: #fff;
    background: #ff6100;
    /* background: #f45044; */
    border-radius: 20rpx;
}

.cart .data .total {
    color: #f45044;
    font-size: 36rpx;
    line-height: 100rpx;
    padding-left: 160rpx;
}

.cart button {
    /* background: #66bbff; */
    background: #6bf;
    color: #fff;
    border: none;
    border-radius: 0;
    width: 280rpx;
    height: 100rpx;
    font-size: 36rpx;
}

.cart button::after {
    border: none;
}

