/* pages/order/order.wxss */
.good-image image {
  width: 140rpx;
  height: 140rpx;
}
.good-info {
  font-size: 32rpx;
  margin: 30rpx 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}
.good-name {
  font-size: 32rpx;
}
.sku-name {
  font-size: 28rpx;
}
.price {
  font-size: 32rpx;
  color: #ff0000;
  text-align: right;
}

textarea {
  border: 0;
}

button.submit {
  margin-top: 30rpx;
  width: 600rpx;
  border-radius: 12rpx;
  background: #d81e06;
  color: #fff;
}

.count input, text {
  display:inline-block;
  font-size: 32rpx;
  vertical-align: middle;
}
.count text {
  padding: 0 12rpx;
}
.numeric {
  border-radius: 5rpx;
  width: 120rpx;
  text-align: center;
}
.bottom-line {
  height: 90rpx;
  line-height: 90rpx;
  background: #f0f3f7;
  padding: 18rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  color: #000;
}
.bottom-line text {
  font-size: 36rpx;
  padding: 0 18rpx;
}
.bottom-line button {
  vertical-align: middle;
  font-weight: 800;
  background: #E98B0f;
  border-radius: 50rpx;
  height: 82rpx;
  width: 182rpx;
  line-height: 82rpx;
  color: #fff;
  border: 0;
}
.address-info {
  height: 150rpx;
}
.address-info text {
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
}
.ad {
  font-weight: 400;
}
.ar {
  font-size: 26rpx;
}
.con {
  font-size: 28rpx;
}

.workspace {
  padding: 18rpx;
}