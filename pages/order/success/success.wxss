/* pages/order/success/success.wxss */
.success-status {
  margin: 36rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #d81e06;
}
.success-status image {
  width: 120rpx;
  height: 120rpx;
  vertical-align: middle;
  display: inline-block;
}
.success-status text {
  display: inline-block;
  font-size: 32rpx;
  font-weight: 400;
  color: #666;
  margin: 20rpx;
  vertical-align: middle;
}
.order-info {
  margin: 36rpx;
}
.order-info text {
  height: 60rpx;
  line-height: 60rpx;
  color: #444;
}
.order-info button {
  color: #fff;
  font-size: 28rpx;
  background: #d81e06;
  border: 0;
}

.goods-name {
  font-weight: 300;
  width: 90%;
}
.brand-name {
  font-weight: 200;
  font-size: 24rpx;
}
.goods, .brands {
  background:#fff;
  margin: 16rpx;
  padding: 22px 0;
}

.good {
  float: left;
  text-align: center;
  width: 50%;
  padding-bottom: 10rpx;
}
.good image {
  width: 320rpx;
  height: 320rpx;
  border-radius: 8rpx;
  color: #666;
}
.good text {
  text-align: left;
  display: inline-block;
  padding: 5rpx 15rpx;
}