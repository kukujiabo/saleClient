/* pages/order/detail/detail.wxss */
.order-title {
  background: #d81e06;
  padding: 24rpx;
  color: #fff;
  border-radius: 6rpx;
}
.status-bar {
  padding: 20rpx;
}
.status-bar image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 30rpx;
  display: inline-block;
  vertical-align: middle;
}
.status-bar .process {
  display: inline-block;
  width: 150rpx;
  height: 5rpx;
  background: #8a8a8a;
  vertical-align: middle;
}
.status-line {
  padding: 20rpx;
}
.status-bar .active-process {
  display: inline-block;
  width: 150rpx;
  height: 5rpx;
  background: #d81e06;
  vertical-align: middle;
}
.order-title text {
  line-height: 50rpx;
  height: 50rpx;
}
.card-box {
  padding: 20rpx;
}
.goods-item {
  margin: 12rpx;
  padding: 8rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.goods-item image {
  width: 150rpx;
  height: 150rpx;
}
.goods-info {
  padding: 10rpx;
  width: 350rpx;
}
.price-info {
  padding: 10rpx 0rpx;
}
.price-info text {
  line-height: 50rpx;
  height: 50rpx;
  display: inline-block;
}
.goods-info text {
  line-height: 50rpx;
  height: 50rpx;
  font-size: 200;
  width: 100%;
  display: inline-block;
}
.order-message {
  padding: 18rpx;
  margin: 16rpx 0;
}

.return {
  padding: 8rpx 0
}

.return button {
  padding: 16rpx;
  height: 50rpx;
  line-height: 18rpx;
  font-size: 24rpx;
}

.return-box .cover {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #000;
  opacity: 0.5;
  z-index: 1000;
}

.return-box .box {
  position: fixed;
  top: 300rpx;
  left: 150rpx;
  right: 150rpx;
  height: 400rpx;
  background: #fff;
  z-index: 1001;
  padding: 20rpx;
  border-radius: 8rpx;
}

.box view {
  padding: 60rpx 0 20rpx 0;
}

.box input {
  border: 1rpx solid #999;
  width: 220rpx;
  margin: auto;
  height: 80rpx;
  line-height: 40rpx;
  border-radius: 5rpx;
  margin-top: 10rpx;
}

.box button {
  margin: 8rpx;
  border: 0;
}