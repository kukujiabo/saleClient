page {
  background: #fff;
}

.login-cont {
  overflow-x: hidden;
  box-sizing: border-box;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 150rpx auto 100rpx;
}

.login-list {
  display: flex;
  border-bottom: 1px solid #f0f0f0;
  padding: 0rpx 5rpx;
  margin: 0 65rpx;
  font-size: 28rpx;
  color: #333;
  align-items: center;
  height: 94rpx;
  line-height: 94rpx;
}

.login-list text, .birthday text {
  /* width:120rpx; */
  margin-right: 40rpx;
  color: #333;
}

.login-list input {
  color: #999;
  font-size: 28rpx;
  width: 300rpx;
}

.btn-yzm {
  width: 160rpx;
  font-size: 24rpx;
  background-color: #fff;
  color: #d81e06;
  border-left: 1px solid #f0f0f0;
  border-radius: 0px;
  padding: 0;
  height: 60rpx;
  line-height: 60rpx;
}

.btn-yzm::after {
  border: none;
  border-radius: 0px;
}

.agreement {
  display: flex;
  justify-content: center;
  margin: 70rpx 0 65rpx;
  font-size: 24rpx;
  color: #666;
}

.agreement checkbox {
  transform: scale(0.6);
}

.agreement-cont {
  position: fixed;
  background: #fff;
  width: 684rpx;
  margin: 100rpx 30rpx 0;
  padding: 55rpx 35rpx;
  border-radius: 5px;
  box-sizing: border-box;
  color: #333;
}

.agreement-cont text {
  font-size: 28rpx;
  padding-bottom: 50rpx;
  display: block;
}

.agreement-cont text.tit {
  font-size: 34rpx;
  padding-bottom: 48rpx;
}

.agreement-cont view {
  line-height: 40rpx;
}

.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
}

.mask {
}

.pickerdate {
  display: flex;
}

.pickerdate input {
  display: inline-flex;
}

.agreement-pop-btn {
  display: flex;
  float: right;
  margin-top: 26rpx;
}

.agreement-pop-btn button {
  background: none;
  border: none;
  width: 200rpx;
  margin: 0;
  padding: 0;
  color: #888;
  font-size: 32rpx;
}

.agreement-pop-btn button::after {
  border: none;
}

.container-hang {
  display: flex;
  flex-direction: row;
  background-color: #fff;
}

.agreement {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 24rpx;
}

.agreement image {
  width: 24rpx;
  height: 24rpx;
  padding-right: 10rpx;
}

.agreement checkbox {
  transform: scale(0.6);
}
