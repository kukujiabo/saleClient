/* pages/cart/cart.wxss */
page {
  background: #f0f3f7;
}
.empty {
  padding: 20% 0;
  text-align: center;
}
.empty image {
  width: 200rpx;
  height: 200rpx;
}
.empty text {
  color: #aaa;
  font-size: 24rpx;
}
.go-pick {
  background: #f0f3f7;
  border: 1rpx solid #116fea;
  border-radius: 8rpx;
  color: #999;
  width: 500rpx;
  font-size: 30rpx;
}
.goods-list {
  padding: 0rpx;
  margin: 20rpx;
}
.check-goods {
  display: inline-block;
  width: 70rpx;
  height: 180rpx;
  line-height: 180rpx;
}
.check-goods checkbox {
  vertical-align: middle
}
.goods-item {
  background: #fff;
  padding: 12rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 0 12rpx #e7e7e7;
}
.goods-item image {
  width: 180rpx;
  height: 180rpx;
}
.goods-info {
  padding: 6rpx 12rpx;
  width: 240rpx;
}
.goods-info text {
  display: block;
  padding: 10rpx 0;
  width: 100%;
}
.goods-info text.title {
  color: #000;
  font-size: 30rpx;
}
.goods-info text.attribute {
  color: #999;
}
.goods-info text.price {
  color: #ff0000;
}
.goods-number {
  width: 170rpx;
}
.edit-number {
  vertical-align: middle;
}
.edit-number image {
  display: inline-block;
  vertical-align: middle;
}
.edit-number input {
  display: inline-block;
  margin: 0 10rpx;
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  text-align: center;
  border: 1rpx solid #f0f0f0;
}
.remove image {
  width: 48rpx;
  height: 48rpx;
  display: inline-block;
  vertical-align: middle;  
}

.confirm-cart-order {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  border-radius: 12rpx;
  z-index: 1000;
  border-top: 1rpx solid #e7e7e7;
  border-bottom: 1rpx solid #e7e7e7;
}

.confirm-cart-order view {
  padding: 15rpx 30rpx;
  line-height: 70rpx;
  height: 70rpx;
}
.confirm-cart-order text {
  color: #d81e06;
  font-size: 36rpx;
  vertical-align: middle;
  padding: 0 12rpx;
}
.confirm-cart-order button {
  border: 0;
  width: 170rpx;
  height: 70rpx;
  padding: 0 !important;
  line-height: 70rpx;
  color: #fff;
  border-radius: 50rpx;
  background: #116fea;
}
.option-line text {
  height: 70rpx;
  line-height: 70rpx;
  display: inline-block;
}
.clear-selected {
  background: #666 !important;
  color: #fff !important;
  font-size: 28rpx;
  border: 0;
}

.minu-img {
  width: 24rpx !important;
  height: 2rpx !important;
  padding: 11rpx 10rpx;
}

.plus-img {
  width: 24rpx !important;
  height: 24rpx !important;
  padding: 0 10rpx;
}