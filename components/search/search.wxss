@import '/app.wxss';

.search-wrapper {
  padding: 18rpx 0;
  position: fixed;
  width: 100%;
}

.out-wrapper view {
  display: inline-block;
}

.input-wrapper {
  width: 500rpx;
  display: inline-block;
}

.search-wrapper view.out-wrapper {
  width: 640rpx;
  border-radius: 12rpx;
  background: #F5F7FD;
  margin: auto;
  padding: 12rpx;
  opacity: 0.9;
  border: 1rpx solid #e7e7e7;
}

.search-wrapper image {
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  margin-right: 10rpx;
}

.search-wrapper input {
  width: 450rpx;
  display: inline-block;
}

.city-wrapper {
  width: 120rpx;
  margin-right: 15rpx;
  border-right: 1rpx solid #ccc;
  padding: 4rpx 0;
}