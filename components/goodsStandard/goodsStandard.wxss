/* components/goodsStandard/goodsStandard.wxss */
@import '../../app.wxss';


.g-s-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: #000;
  opacity: 0.5;
  z-index: 9999;
}

.btn-gray {
  background: #e7e7e7;
}

.standard-box {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 90rpx;
  background: #fff;
  height: 75%;
  z-index: 10000;
}

.remove {
  position: absolute;
  right: 24rpx;
  top: 24rpx;
  width: 60rpx;
  height: 60rpx;
}

.stand-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
}

.info {
    padding: 36rpx 36rpx 0 36rpx;
    height: 100%;
}

.attr-info {
  border-top: 1rpx solid #f0f0f0;
  padding: 12rpx 0;
  overflow: hidden;
}

.sku-info {
  padding-bottom: 24rpx;
}

.sku-info text {
  display: inline-block;
  padding: 10rpx 24rpx 0 0;
}

.s-i-gname {
  font-size: 26rpx;
  color: #333;
  width: 90%;
}
.s-i-gprice {
  font-size: 28rpx;
  color: #ff0000;
}
.s-i-gstock {
  font-size: 28rpx;
  color: #666;
}
.attr-values {
  padding: 16rpx 0;
}
.attr-name {
  color: #999;
  font-size: 28rpx;
  font-weight: 200;
  display: inline-block;
  height: 42rpx;
  line-height: 42rpx;
}
.attr-values text {
  margin: 10rpx 10rpx 10rpx 0;
  padding: 8rpx;
  font-size: 24rpx;
  color: #777;
  border-radius: 5rpx;
  border: 1rpx solid #777;
  min-width: 50rpx;
  text-align: center;
}

.attr-values text.active {
  color: #ffffff;
  border: 1rpx solid #ff0000;
  background: #ff0000;
}

.price {
  width: 64%;
  background: #f0f0f0;
}

.price text:first-child {
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 36rpx;
  font-size: 36rpx;
  font-weight: 200;
  color: #999;
}

.price text:last-child {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  color: #ff0000;
  font-size: 200;
}

.btns {
  width: 36%;
}

.btns button {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  font-weight: 600;
  width: 100%;
}

.quantity {
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
}

.quantity .label {
  height: 50rpx;
  line-height: 50rpx;
}

.quantity .minus {
  width:24rpx;
  height: 4rpx;
  padding: 20rpx 0;
}

.quantity .plus {
  width:28rpx;
  height: 28rpx;
}

.quantity input {
  width: 80rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  display: inline-block;
  vertical-align: middle;
  margin: 0 10rpx;
  font-size: 36rpx;
}

.result {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10001;
  height: 90rpx;
  line-height: 90rpx;
}

.incart {
  background: #FFCC33;
  color: #333;
}

.purchase {
  background: #d81e06;
  color: #fff;
}

.sku-select {
  font-size: 24rpx;
  color: #999;
  font-weight: 200;
}

.word-inline {
  width: 400rpx;
  display: inline-block;
}


.sign {
  padding: 12rpx 0;
}

.sign image {
  width: 30rpx;
  height: 30rpx;
  margin: 0 10rpx;
}

.sign text {
  padding: 0
}